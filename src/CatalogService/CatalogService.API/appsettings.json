{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "CatalogServiceDbContext": "Host=localhost;Port=5433;Database=catalog_db;Username=catalog_user;Password=catalog_password"
  },
  "FilesOptions": {
    "BasePath": ".",
    "BrandLogosFolder": "BrandLogos",
    "ProductsPhotoFolder": "ProductPhotos",
    "DefaultLogo": "default_logo.png",
    "DefaultProductPhoto": "default_product.png",
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".gif" ],
    "MaxFileSize": 10485760
  }
}
